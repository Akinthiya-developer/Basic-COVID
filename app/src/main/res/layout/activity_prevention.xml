<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".PreventionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hand"
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/ll" />

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hand"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="42dp"
            android:text="STAY HOME STAY SAFE."
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/one"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:text="1"
            android:textColor="@color/newie"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_below="@+id/one"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:text="2"
            android:textColor="@color/newie"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_below="@+id/two"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:text="3"
            android:textColor="@color/newie"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/three"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:visibility="invisible"
            android:text="4"
            android:textColor="@color/newie"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/one"
            android:layout_below="@id/head"
            android:layout_marginTop="63.5dp"
            android:textColor="#0000ff"
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="20dp"
            android:text="A. Stay HOME" />


        <TextView
            android:id="@+id/two_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/two"
            android:textColor="#0000ff"
            android:fontFamily="serif-monospace"
            android:layout_below="@id/one_text"
            android:layout_marginTop="40.4dp"
            android:layout_marginLeft="20dp"
            android:text="B. keep a safe DISTANCE" />

        <TextView
            android:id="@+id/three_text"
            android:layout_width="wrap_content"
            android:textColor="#0000ff"
            android:fontFamily="serif-monospace"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/three"
            android:layout_below="@id/two_text"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="20dp"
            android:text="C. WASH your hands often" />

        <TextView
            android:id="@+id/four_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/four"
            android:layout_below="@id/three_text"
            android:layout_marginTop="38dp"
            android:textColor="#0000ff"
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="20dp"
            android:text="D. cover you COUGH" />

        <ImageView
            android:id="@+id/sleep"
            android:layout_width="88dp"
            android:layout_height="101dp"
            android:layout_below="@id/four_text"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="49dp"
            android:src="@drawable/sleeoo" />

        <ImageView
            android:id="@+id/warm"
            android:layout_width="88dp"
            android:layout_height="101dp"
            android:layout_below="@id/sleep"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/warme" />

        <ImageView
            android:layout_width="88dp"
            android:layout_height="101dp"
            android:layout_below="@id/warm"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/liq" />

        <TextView
            android:id="@+id/sleeoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sleep"
            android:layout_below="@id/four_text"
            android:layout_marginTop="98dp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:text="Rest and Sleep" />

        <TextView
            android:id="@+id/warmoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sleep"
            android:layout_below="@id/sleep"
            android:layout_marginTop="98dp"
            android:padding="5dp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="keep yourself warm" />

        <TextView
            android:id="@+id/liqText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sleep"
            android:layout_below="@id/warmoText"
            android:padding="5dp"
            android:layout_marginTop="98dp"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:text="Drink plenty of liquids" />

    </RelativeLayout>
</ScrollView>